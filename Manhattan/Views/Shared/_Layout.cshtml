<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>@ViewBag.Title | Manhattan REST API</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="~/Content/style.css" rel="stylesheet" />

</head>
<body>
    <div class="wrapper layout--tiny">
        <div class="grid">
            <div class="grid__item three-quarters">
                @RenderBody()
            </div><!-- .grid__item --><!--
         --><div class="grid__item one-quarter">
                <ul class="list-block menu">
                    <li class="menu__item">
                        @Html.ActionLink(
                            "GET api/continents",
                            "GetContinents",
                            "Home",
                            null,
                            new { @class = "menu_link" }
                        )
                    </li>
                    <li class="menu__item">
                        @Html.ActionLink(
                            "GET api/continents/:id",
                            "GetContinentsID",
                            "Home",
                            null,
                            new { @class = "menu_link" }
                        )
                    </li>
                    <li class="menu__item">
                        @Html.ActionLink(
                            "POST api/continents",
                            "PostContinents",
                            "Home",
                            null,
                            new { @class = "menu_link" }
                        )
                    </li>
                    <li class="menu__item">
                        @Html.ActionLink(
                            "PUT api/continents/:id",
                            "PutContinentsID",
                            "Home",
                            null,
                            new { @class = "menu_link" }
                        )
                    </li>
                    <li class="menu__item">
                        @Html.ActionLink(
                            "DELETE api/continents/:id",
                            "DeleteContinentsID",
                            "Home",
                            null,
                            new { @class = "menu_link" }
                        )
                    </li>
                    <li class="menu__item">
                        @Html.ActionLink(
                            "GET api/countries",
                            "GetCountries",
                            "Home",
                            null,
                            new { @class = "menu_link" }
                        )
                    </li>
                    <li class="menu__item">
                        @Html.ActionLink(
                            "GET api/countries/:id",
                            "GetCountriesID",
                            "Home",
                            null,
                            new { @class = "menu_link" }
                        )
                    </li>
                    <li class="menu__item">
                        @Html.ActionLink(
                            "POST api/countries",
                            "PostCountries",
                            "Home",
                            null,
                            new { @class = "menu_link" }
                        )
                    </li>
                    <li class="menu__item">
                        @Html.ActionLink(
                            "PUT api/countries/:id",
                            "PutCountriesID",
                            "Home",
                            null,
                            new { @class = "menu_link" }
                        )
                    </li>
                    <li class="menu__item">
                        @Html.ActionLink(
                            "DELETE api/countries/:id",
                            "DeleteCountriesID",
                            "Home",
                            null,
                            new { @class = "menu_link" }
                        )
                    </li>
                    <li class="menu__item">
                        @Html.ActionLink(
                            "GET api/restcountries/:string",
                            "RestCountries",
                            "Home",
                            null,
                            new { @class = "menu_link" }
                        )
                    </li>
                </ul><!-- .menu -->
            </div><!-- .grid__item -->
        </div><!-- .grid -->
    </div><!-- .wrapper -->
    <script src="~/Scripts/syntaxhighlighter.js"></script>
    <script>
    var stylesheet = document.createElement('link');
            stylesheet.href = '//fonts.googleapis.com/css?family=Source+Sans+Pro:400,600,700';
            stylesheet.rel = 'stylesheet';
            stylesheet.type = 'text/css';
    document.head.appendChild(stylesheet);
    </script>
</body>
</html>
<noscript>
    <link href='//fonts.googleapis.com/css?family=Source+Sans+Pro:400,600,700' rel='stylesheet' type='text/css'>
</noscript>